<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>Forgot Password</title>
    <style>
@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap');

* {   
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family:  'Playfair Display', sans-serif;
}

body {
      display: flex;
      position: relative;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      width: 100%;
      background: #ffffff;
      background-image: url('/digital-art-style-abstract-chess-pieces.jpg');
      background-repeat: no-repeat;
      background-attachment: scroll;
      background-size: cover;
}

.container {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
}

.form-box {
    position: absolute;
    right: 0;
    width: 50%;
    height: 100%;
    background: white;
    display: flex;
    align-items: center;
    color: #333;
    text-align: center;
    padding: 40px;
    justify-content: center;
}

.form-box.forgot-password {
      width: 400px;
      max-width: 90%;
      padding: 40px 30px;
      border-radius: 15px;
      background: #fff;
      box-shadow: 0 4px 15px rgba(0,0,0,0.25);
      text-align: center;
}

.form-box.forgot-password h1 {
      font-size: 2rem;
      margin-bottom: 15px;
      color: white;
}

.form-box.forgot-password p {
      font-size: 1rem;
      color: white;
      margin-bottom: 25px;
}

.input-box {
      position: relative;
      margin: 15px 0;
}

.input-box input {
      width: 100%;
      padding: 12px 40px 12px 15px;
      border: 1px solid #ccc;
      border-radius: 8px;
      outline: none;
      font-size: 1rem;
}

.input-box i {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #777;
      font-size: 1.2rem;
}

.btn {
      width: 100%;
      padding: 12px;
      margin-top: 10px;
      border: none;
      border-radius: 8px;
      background: #4b6cb7;
      color: #fff;
      font-size: 1rem;
      cursor: pointer;
}

.btn:hover {
      background: #182848;
}

.forgot-link {
      margin-top: 20px;
}

.forgot-link a {
      text-decoration: none;
      font-size: 1rem;
      color: #4b6cb7;
      transition: color 0.3s;
}

.forgot-link a:hover {
      color: #182848;
}

.message {
  max-width: 400px;
  margin: 15px auto;
  padding: 12px 20px;
  border-radius: 8px;
  font-family: Arial, sans-serif;
  font-size: 15px;
  font-weight: 500;
  color: #fff;
  text-align: center;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.message {
  background-color:   #182848;
}

.message.error {
  background-color: #e74c3c; 
}

.message.success {
  background-color: #2ecc71; 
}

.message.show {
  opacity: 1;
  transform: translateY(0);
}

.message.hide {
  opacity: 0;
  transform: translateY(-20px);
}

@media screen and (max-width: 500px) {
  .form-box.forgot-password {
      padding: 30px 20px;
      }

  .form-box.forgot-password h1 {
      font-size: 1.8rem;
      }

  .form-box.forgot-password p {
      font-size: 0.9rem;
      }

    .container{
        height: 100vh;
        width: 100%;
    }

    .container .form-box{
        width: 100%;    
        top: 50%;              
        left: 0;
        transform: translateY(-50%);    
        padding: 20px;
    }

    .container.active .form-box{
        top: 50%;           
        transform: translateY(-50%);
        right: 0;
    }

    .input-box {
        margin: 8px auto;
  }

    .input-box input {
    margin-bottom: 10px;
}

    .form-box form {
        max-height: 100%;
        overflow-y: auto;
    }

}
    </style>
</head>
<body>
    <div class="container">
        <div class="form-box ForgotPassword">
            <form action="/auth/Forgot" method="POST"> 
                <h1>Forgot Password</h1>
                <p>Enter your email address and we'll send you a link to reset your password.</p>
                
                <div class="input-box">
                    <input type="email" name="email" placeholder="Email Address" required>
                    <i class='bx bxs-envelope'></i>
                </div>

                <button type="submit" class="btn">Send Reset Link</button>

                <div class="forgot-link">
                    <a href="/Login">Back to Login</a>
                </div>
                {{#if message}}
                    <div class="message">
                        <h4>{{message}}</h4>
                    </div>
                {{/if}}
            </form>
            
        </div>
    </div>
    <script>
    const message = document.querySelector('.message');
        
        if (message){
        setTimeout(() => {
            message.style.opacity = "0"; 
            message.style.transition = "opacity 1s ease";
            setTimeout(() => {
                message.remove();
            }, 1000);
        }, 5000);
        message.addEventListener("click", () => {
        message.remove();
    });
  }
    </script>
</body>
</html>
